<h1>Listing Products</h1>
  <label>Catergory</label>

<table>

<tr>
	<td>Name</td>
	<td>Description</td>
	<td>Price</td>
	<td>Category</td>
	<td>Actions</td>
</tr>
<% @products.each do |product| %>
<tr>
	
	<td><%= product.name %></td>
	<td><%= product.description %></td>
	<td><%= product.price %></td>
	<td><%= product.category.name %></td>
	<td>
	<a href="/products/<%= product.id %>">Show</a>|
	<a href="/products/<%= product.id %>/edit">Edit</a>|
	<a href="/products/<%= product.id %>" data-method='delete'>Destroy</a>
	</td>
</tr>
<% end %>
</table>

<h2><a href="products/new">New Product</a></h2>


